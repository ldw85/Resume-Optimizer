{
  "version": 2,
  "builds": [
    {
      "src": "adapt2job-frontend",
      "use": "@vercel/static-build",
      "config": { "distDir": "adapt2job-frontend/dist" }
    },
    {
      "src": "adapt2job-backend/api/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["adapt2job-backend/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "adapt2job-backend/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "adapt2job-frontend/dist/index.html"
    }
  ],
  "installCommand": "npm install --prefix adapt2job-frontend && npm install --prefix adapt2job-backend",
  "buildCommand": "npm run build --prefix adapt2job-frontend --verbose && npm run build --prefix adapt2job-backend --verbose"
}
