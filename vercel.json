{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "trailingSlash": false,
  "builds": [
    {
      "src": "adapt2job-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "adapt2job-backend/api/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["adapt2job-backend/dist/**"] }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "adapt2job-backend/api/index.ts"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/adapt2job-frontend/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/adapt2job-frontend/robots.txt"
    },
    {
      "source": "/llms.txt",
      "destination": "/adapt2job-frontend/llms.txt"
    },
    {
      "source": "/llm-full.txt",
      "destination": "/adapt2job-frontend/llm-full.txt"
    },
    {
      "source": "/resume-icon.svg",
      "destination": "/adapt2job-frontend/resume-icon.svg"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/adapt2job-frontend/assets/$1"
    },
    {
      "source": "/locales/(.*)",
      "destination": "/adapt2job-frontend/locales/$1"
    },
    {
      "source": "/image/(.*)",
      "destination": "/adapt2job-frontend/image/$1"
    },
    {
      "source": "/blog/(.*)",
      "destination": "/adapt2job-frontend/blog/$1"
    },
    {
      "source": "/how-it-works.gif",
      "destination": "/adapt2job-frontend/how-it-works.gif"
    },
    {
      "source": "/(.*)",
      "destination": "/adapt2job-frontend/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(?:html|css|js|png|jpg|jpeg|gif|svg|xml|json|txt))$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ],
  "installCommand": "npm install --prefix adapt2job-frontend && npm install --prefix adapt2job-backend",
  "buildCommand": "npm run build --prefix adapt2job-frontend --verbose && npm run build --prefix adapt2job-backend --verbose"
}